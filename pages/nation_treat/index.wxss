.content {
  display: flex;
  flex-direction: row;
  font-family: "Microsoft YaHei";
}
.content .left {
  width: 32%;
  font-size: 24rpx;
  height: 890rpx;
  background-color: #F4F4F4;
}
.content .left view {
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
}
.content .left view .select {
  background-color: #ffffff;
  border-left: 4px solid #36AE66;
  font-weight: bold;
  color: #36AE66;
}
.content .left view .select .normal {
  background-color: #F4F4F4;
  border-bottom: 1px solid #f2f2f2;
}
.content .right {
  width: 70%;
  height: 900rpx;
  margin: 0rpx;
}
.content .right .category swiper .item_detail swiper-item .index_swiper swiper-item image {
  width: 100%;
}
.content .right .category swiper .item_detail swiper-item .Treat_Theory {
  display: flex;
}
.content .right .category swiper .item_detail swiper-item .Treat_Theory .theory_title {
  border: 10rpx solid #ffffff;
}
.content .right .category swiper .item_detail swiper-item .Treat_Theory .theory_title image {
  width: 155rpx;
  height: 240rpx;
}
.content .right .category swiper .item_detail swiper-item .Treat_Theory .recommend_scroll {
  height: 240rpx;
}
.content .right .category swiper .item_detail swiper-item .Treat_Theory .recommend_scroll .Treat_Theory1 {
  display: inline-flex;
  flex-direction: row-reverse;
}
.content .right .category swiper .item_detail swiper-item .Treat_Theory .recommend_scroll .Treat_Theory1 .theory_item {
  width: 0rpx;
  height: 0rpx;
}
.content .right .category swiper .item_detail swiper-item .Treat_Theory .recommend_scroll .Treat_Theory1 .theory_item .img_view {
  width: 100%;
  height: 100%;
}
.content .right .category swiper .item_detail swiper-item .Treat_Theory .recommend_scroll .Treat_Theory1 .theory_item1 {
  width: 155rpx;
  height: 240rpx;
  border: 10rpx solid #ffffff;
  text-align: center;
  flex: 1;
}
.content .right .category swiper .item_detail swiper-item .Treat_Theory .recommend_scroll .Treat_Theory1 .theory_item1 .item_img {
  width: 100%;
