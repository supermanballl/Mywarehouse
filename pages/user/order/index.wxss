}
.swiper_item {
  background-color: #b81212;
  width: 90%;
  height: 400rpx;
  -webkit-border-radius: 8px;
  -moz-border-radius: 8px;
  border-radius: 8px;
  -webkit-box-shadow: #1d1c1c 0px 0px 10px;
  -moz-box-shadow: #242424 0px 0px 10px;
  box-shadow: #1f1f1f 0px 0px 10px;
  position: relative;
  left: 50%;
  transform: translateX(-50%);
  top: 40rpx;
  overflow: hidden;
}
.dditem {
  width: 90%;
  /* height: 400rpx; */
  border-radius: 30rpx;
  background-color: #fff;
  padding-bottom: 30rpx;
  margin-top: 30rpx;
  margin-left: 5%;
  justify-content: center;
  align-items: center;
}
.status {
  text-align: right;
  padding-top: 30rpx;
  margin-right: 30rpx;
  font-size: 30rpx;
  color: #ffa71a;
}

.dditem_left {
  height: 200rpx;
  display: flex;
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.img {
  flex: 3;

  background-color: rgb(120, 92, 92);
  border-radius: 20rpx;
  margin: 5rpx 5rpx 5rpx 5rpx;
  overflow: hidden;
}
.text {
  flex: 5;
  margin-left: 20rpx;
}
.goodstitle {
  font-size: 35rpx;
  font-weight: 550;
  justify-content: space-between;
  align-items: flex-start;
  padding: 0 20rpx;
}
.goodsmsg {
  font-size: 28rpx;
  font-weight: 400;
  justify-content: space-between;
  align-items: flex-start;
  padding: 0 20rpx;
  color: rgb(87, 87, 87);
  margin-right: 30rpx;
  display: -webkit-box;
  word-break: break-all; /*换行规则*/
  text-overflow: ellipsis; /*最后使用省略号显示*/
  overflow: hidden; /*超出部分隐藏*/
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3; /*能够显示几行*/
  line-height: 20px; /*行高，固定写死。后续将会使用它*/
}
