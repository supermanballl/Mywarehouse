.tab-h {
  height: 80rpx;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  line-height: 80rpx;
  background: #ffffff;
  font-size: 16px;
  white-space: nowrap;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}
.tab-item {
  margin: 0 36rpx;
  display: inline-block;
}
.tab-item.active {
  color: #4675f9;
  position: relative;
}
.tab-item.active:after {
  content: "";
  display: block;
  height: 8rpx;
  width: 100%;
  background: #f9ae46;
  position: absolute;
  bottom: 0;
  border-radius: 16rpx;
}

.tab-content {
  margin-top: 80rpx;
  width: 100%;
  /* height: 2000rpx; */
}
page {
  background-color: #edece8;
}
