<view>
  <scroll-view
    scroll-x="true"
    class="tab-h"
    scroll-left="{{scrollLeft}}"
  >
    <view
      class="tab-item {{currentTab==0?'active':''}}"
      data-current="0"
      bindtap="swichNav"
    >全部
    </view>
    <view
      class="tab-item {{currentTab==1?'active':''}}"
      data-current="1"
      bindtap="swichNav"
    >待付款
    </view>
    <view
      class="tab-item {{currentTab==2?'active':''}}"
      data-current="2"
      bindtap="swichNav"
    >待发货
    </view>
    <view
      class="tab-item {{currentTab==3?'active':''}}"
      data-current="3"
      bindtap="swichNav"
    >待收货
    </view>
    <view
      class="tab-item {{currentTab==4?'active':''}}"
      data-current="4"
      bindtap="swichNav"
    >退换/售后
    </view>
  </scroll-view>
  <swiper
    class="tab-content"
    current="{{currentTab}}"
    duration="300"
    style="height:{{tabheight[currentTab]}}rpx;"
    bindchange="switchTab"
  >
    <swiper-item>
      <view>
        <view class="page_position">
          <view class="dditem" wx:for="{{userddlist}}">
            <view class="status">交易成功</view>
            <view class="dditem_left">
              <view class="img">
                <image
                  src="{{item.src}}"
                  mode="aspectFill"
                  style="width: 100%; height: 100%"
                  lazy-load="false"
                />
              </view>
              <view class="text">
                <view class="goodstitle">{{item.goods_title}}</view>
                <view class="goodsmsg">{{item.content}}</view>
              </view>
              <view class="itemmsg">
                <view class="price">￥{{item.price}}</view>
                <view class="num">×{{item.num}}</view>
              </view>

            </view>
            <view class="price">
              <view class="lefttext">实付款：</view>
              <view class="pricetext">￥{{item.price}}</view>
            </view>
            <view class="DDnumber">
              <view class="lefttext">订单号：</view>
              <view class="righttext">{{item.DDNumber}}</view>
            </view>
            <view class="DDtime">
              <view class="lefttext">下单时间：</view>
              <view class="righttext">{{item.payTime}}</view>
            </view>
            <view class="address">
              <view class="lefttext">收货地址：</view>
              <view class="righttext">{{item.province+item.city+item.district+item.name+item.phone}}</view>
            </view>
          </view>
        </view>
      </view>
    </swiper-item>

