<view class="list-page" wx:if="{{flag}}">
  <view
    class="date"
    wx:for="{{list}}"
    wx:for-item="itemtime"
    wx:for-index="index"
    wx:key="time"
  >
    <view class="date_text">{{itemtime.time}}</view>
    <view
      class="list-item"
      wx:for="{{itemtime.history}}"
      wx:for-item="item"
      wx:for-index="index"
      wx:key="goods_id"
      data-id="{{item.goods_id}}"
    >
      <!-- 复选框 -->
      <view class="chk_wrap">
        <checkbox-group data-id="{{item.goods_id}}" bindchange="handeItemChange">
          <checkbox checked="{{item.checked}}"></checkbox>
        </checkbox-group>
      </view>
      <view
        class="item-content"
        bindtap="gotoDetail"
        data-id="{{item.goods_id}}"
      >
        <view class="txt">
          <view class="img">
            <image
              src="{{item.src}}"
              mode="aspectFit"
              style="width: 100%; height: 100%"
              lazy-load="false"
            />
          </view>
          <view class="text">{{item.goods_title}}</view>
        </view>
      </view>
    </view>
  </view>

</view>

<!-- 暂无历史足迹 -->
<view
  class="shoucang"
  style="margin-top:200rpx"
  wx:else
>
  <image
    class=""
    src="http://47.92.30.79/images/goods_detail/暂无.gif"
    mode="widthFix"
    lazy-load="false"
    style="width:100%"
  />

</view>

<!-- 底部工具栏开始 -->
<view class="footer_tool">
  <!-- 全选 -->
  <view class="all_chk_wrap">
    <checkbox-group bindchange="handleItemAllCheck">
      <checkbox checked="{{allChecked}}">全选</checkbox>
    </checkbox-group>
  </view>
  <!-- 总价格 -->
  <view class="total_price_wrap">
    <view class="total_price">
      <text class="total_price_text"></text>
    </view>
    <view></view>
  </view>
  <view class="order_pay_wrap" bindtap="handleDel">
    删除({{count}})
  </view>
</view>
<!-- 底部工具栏结束 -->

