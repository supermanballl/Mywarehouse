page{
  background-color: #edece8;
  padding-bottom: 100rpx;
}
.list-page{
  margin-top: 30rpx;
    display: flex;
    flex-direction: column;
    border-top: 2rpx solid #f0f0f0
  }
  .date_text{
    margin-top: 30rpx;
    margin-left: 30rpx;
  }
  .list-item{
    height: 200rpx;
    width: 90%;
    display: flex;
    background-color: #fff;
    justify-content: space-between;
    align-items: center;
    border-radius: 30rpx;
    margin-left: 5%;
    margin-top: 30rpx;
    -webkit-box-shadow: #666666 0px 0px 3px;
    -moz-box-shadow: #666666 0px 0px 3px;
  }
  .chk_wrap{
    flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
  }
  .item-content{
    width: 100%;
    height: 100%;
    display: flex;
    /* flex-direction: column; */
    justify-content: center;
    padding: 0 20rpx 0 20rpx;
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
    -webkit-transform: translateX(180rpx);
    transform: translateX(180rpx); 
    margin-left: -200rpx;
  }
   .txt{
    display: flex;
    justify-content: center;
    width: 100%;
    height: 100%;
  } 
   .img{
    flex: 3;
    width: 100%;
    background-color: rgb(120, 92, 92);
    border-radius: 20rpx;
    margin: 5rpx 5rpx 5rpx 5rpx;
  }
  .text{
    flex: 5;
    margin-left: 10rpx;
    display: flex;
    align-items: center;
  }
  .content-info{
    display: flex;
    width: 100%;
    justify-content: space-between;
    font-size: 32rpx;
    color: #999
  }
  .content-name{
    width: 100%;
  }
  .list-item-touch-active .item-content{
    margin-left: -100rpx;
  }
  .list-item-touch-active .item-content, .list-item-touch-active .item-delete {
    -webkit-transform: translateX(0) !important;
    transform: translateX(0) !important;
  }
  .item-delete{
    width: 100rpx;
    height: 200rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: red;
    color: #fff;
    font-size: 32rpx;
    -webkit-transform: translateX(180rpx);
    transform: translateX(180rpx);
    -webkit-transition: all 0.4s;
    transition: all 0.4s;
  }
  .footer_tool {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 90rpx;
    background-color: #fff;
    display: flex;
    border-top: 1rpx solid #ccc;
    border-radius: 30rpx;
  }
  .footer_tool .all_chk_wrap {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 30rpx;
  }
  .footer_tool .total_price_wrap {
    flex: 5;
    padding-right: 15rpx;
    text-align: right;
  }
  .footer_tool .total_price_wrap .total_price .total_price_text {
    color: var(--themeColor);
    font-size: 34rpx;
    font-weight: 600;
  }
  .footer_tool .order_pay_wrap {
    flex: 4;
    background-color: var(--themeColor);
    color: #fff;
    font-size: 32rpx;
    font-weight: 600;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius:0rpx 30rpx 0rpx 0rpx;
  }