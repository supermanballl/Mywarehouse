<!-- 购物车开始 -->
<view class="cart_content">
  <view class="cart_main">
    <!-- 当cart数组 长度不为0 显示 商品信息 -->
    <block wx:if="{{cart.length!=0}}">
      <view
        class="cart_item"
        wx:for="{{cart}}"
        wx:key="goods_id"
      >
        <!-- 复选框 -->
        <view class="cart_chk_wrap">
          <checkbox-group data-id="{{item.goods_id}}" bindchange="handeItemChange">
            <checkbox checked="{{item.checked}}"></checkbox>
          </checkbox-group>
        </view>
        <!-- 商品图片 -->
        <navigator class="cart_img_wrap" bindtap="frontToCart">
          <image mode="widthFix" src="{{item.src}}"></image>
        </navigator>
        <!-- 商品信息 -->
        <view class="cart_info_wrap">
          <view class="goods_name">{{item.goods_name}}</view>
          <view class="goods_price_wrap">
            <view class="goods_price">￥{{item.goods_price}}</view>
            <view class="cart_num_tool">
              <view
                bindtap="handleItemNumEdit"
                data-id="{{item.goods_id}}"
                data-operation="{{-1}}"
                class="num_edit"
              >-
              </view>
              <view class="goods_num">{{item.num}}</view>
              <view
                bindtap="handleItemNumEdit"
                data-id="{{item.goods_id}}"
                data-cartid="{{item.cartid}}"
                data-operation="{{1}}"
                class="num_edit"
              >+
              </view>
            </view>
          </view>
        </view>
      </view>
    </block>
    <block wx:else>
      <view class="b_img">
        <image
          class="img_size"
          mode="widthFix"
          src="https://img0.baidu.com/it/u=103546618,3013933963&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500"
        ></image>
      </view>

    </block>
  </view>
</view>
<!-- 购物车结束 -->

<!-- 猜你喜欢开始 -->
<!-- 商品列表开始 -->
<view class="goods">
  <view class="goods_title">———猜你喜欢———</view>
  <view class="goods_item">

    <view class='content'>
      <view class='left'>
        <block wx:for="{{goods}}" wx:key="*this">
          <view
            class="goods_detail"
            bindtap="frontToCart"
            data-id="{{item.goods_id}}"
          >
            <view class="goods_img">
              <image
                class=""
                src="{{item.src}}"
                mode="aspectFill"
                style="width: 100%; height: 100%"
              />
            </view>
            <view class="goods_text">
              <view class="goods_name">{{item.goods_title}}</view>
              <view class="text_view">
                <view class="goods_price">￥{{item.goods_price}}</view>
                <view class="goods_howBuy">/{{item.goods_howBuy}}</view>
                <view class="goods_num">{{item.goods_xiaoliang}}+定制</view>
                <view class="goods_cart">
                  <image
                    src="http://47.92.30.79/images/front_page/购物车.png"
                    style="width: 100%; height: 100%"
                    mode="aspectFit"
                    lazy-load="false"
                    binderror=""
                    bindload=""
                  />
                </view>
              </view>
            </view>
          </view>
        </block>
      </view>
      <view class='right'>
        <block wx:for="{{goods1}}" wx:key="*this">
          <view
            class="goods_detail"
            bindtap="frontToCart"
            data-id="{{item.goods_id}}"
          >
            <view class="goods_img">
              <image
                class=""
                src="{{item.src}}"
                mode="aspectFill"
                style="width: 100%; height: 100%"
                lazy-load="false"
                binderror=""
                bindload=""
              />
            </view>
            <view class="goods_text">
              <view class="goods_name">{{item.goods_title}}</view>
              <view class="text_view">
                <view class="goods_price">￥{{item.goods_price}}</view>
                <view class="goods_howBuy">/{{item.goods_howBuy}}</view>
                <view class="goods_num">{{item.goods_xiaoliang}}+定制</view>
                <view class="goods_cart">
                  <image
                    src="http://47.92.30.79/images/front_page/购物车.png"
                    style="width: 100%; height: 100%"
                    mode="aspectFit"
                    lazy-load="false"
                    binderror=""
                    bindload=""
                  />
                </view>
              </view>
            </view>
          </view>
        </block>
      </view>
    </view>
  </view>

</view>
<!-- 商品列表结束 -->
<!-- 猜你喜欢结束 -->

<!-- 底部工具栏开始 -->
<view class="footer_tool">
  <!-- 全选 -->
  <view class="all_chk_wrap">
    <checkbox-group bindchange="handleItemAllCheck">
      <checkbox checked="{{allChecked}}">全选</checkbox>
    </checkbox-group>
  </view>
  <!-- 总价格 -->
  <view class="total_price_wrap">
    <view class="total_price">
      合计:
      <text class="total_price_text">￥{{totalPrice}}</text>
    </view>
    <view>包含运费</view>
  </view>
  <!-- 结算 -->
  <view class="order_pay_wrap" bindtap="handlePay">
    结算({{totalNum}})
  </view>
</view>
<!-- 底部工具栏结束 -->

